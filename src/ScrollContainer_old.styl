.user-select-none *
  user-select none !important // don't select text when scrolling

[data-sc='root']
  display flex
  overflow hidden
  position relative
  -webkit-overflow-scrolling touch /* Trigger native scrolling for mobile, if not supported, plugin is used. */

$padding = 20px

[data-sc='content']
  box-sizing content-box // needed?
  flex 1
  margin-right -1 * $padding
  min-width 100% // needed?
  overflow-y scroll
  padding-right $padding

[data-sc='scrollbar-vertical'], [data-sc='scrollbar-horizontal']
  bottom 0
  display flex
  position absolute
  z-index 1

[data-sc='scrollbar-vertical']
  flex-direction column
  top 0

[data-sc-layout='ltr'] [data-sc='scrollbar-vertical']
  right 0

[data-sc-layout='rtl'] [data-sc='scrollbar-vertical']
  left 0

[data-sc='scrollbar-horizontal']
  left 0

[data-sc^='scrollbar-track']
  height 100%
  width 100%

[data-sc^='scrollbar-thumb']
  background black
  // pointer-events all // disables clicking of elements below the scrollbar
  position relative
  transition height 0.1s // when the content height changes and then the scrollbar height changes, we wan't to make it look smooth
  will-change transform // hint to the browser that this attribute will most likely change
